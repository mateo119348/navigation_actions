<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    package="com.example.pruebaconceptonavigationmanager"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ActionAbstractActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pruebaconceptonavigationmanager.activities.posSelector.PosSelectorActivity"
            android:label="PosSelector">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="pos_selector"
                    android:scheme="mercadopago" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pruebaconceptonavigationmanager.activities.chooser.ChooserActivity"
            android:label="Chooser">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="chooser"
                    android:scheme="mercadopago" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pruebaconceptonavigationmanager.activities.description.DescriptionActivity"
            android:label="Descripcion">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="description"
                    android:scheme="mercadopago" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pruebaconceptonavigationmanager.activities.installments.InstallmentsActivity"
            android:label="Installments">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="installments"
                    android:scheme="mercadopago" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pruebaconceptonavigationmanager.activities.calculator.CalculatorActivity"
            android:label="Monto/Calculadora">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="calculator"
                    android:scheme="mercadopago" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.pruebaconceptonavigationmanager.activities.calculator.mla.CalculatorActivityMLA"
            android:label="Monto/Calculadora MLA">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="calculator_mla"
                    android:scheme="mercadopago" />
            </intent-filter>
        </activity>
    </application>

</manifest>